{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"baseUrl": ".",
		"jsx": "react-jsx",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts", "src/index.ts", "src/*.tsx"],
	"exclude": ["node_modules", "dist", ".vscode"]
}
