{
	"compilerOptions": {
		"target": "ESNext",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"baseUrl": ".",
		"jsx": "react-jsx",
		"noUnusedLocals": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts", "src/index.ts", "src/*.tsx"],
	"exclude": ["node_modules", ".vscode"]
}
