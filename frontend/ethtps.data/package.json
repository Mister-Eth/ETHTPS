{
	"name": "ethtps.data",
	"version": "0.1.0",
	"description": "Data layer for ETHTPS.info frontend",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"/dist"
	],
	"dependencies": {
		"@reduxjs/toolkit": "^1.9.1",
		"@types/node": "^18.14.0",
		"ethtps.api.client": "../ethtps.api.client",
		"moment": "^2.29.4",
		"react-dom": "^18.2.0",
		"react-query": "^3.39.3",
		"react-redux": "^8.0.5",
		"reconnecting-websocket": "^4.4.0"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "npx tsc",
		"lint": "npx eslint src test",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "npx prettier src test --check",
		"prettier:fix": "npm run prettier -- --write"
	},
	"compilerOptions": {
